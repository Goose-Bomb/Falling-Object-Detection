    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": false
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug",
            "program": "${command:cmake.launchTargetPath}",
            "args": [
                "--verbose",
                // "--addr", "localhost",
                // "--file", "live"
                "--local",
                "--file",
                "data/apartment.mp4",
                // "data/office_building_floor_15.avi",
                // "--resize",
                // "720",
                // "--rotate"
            ],
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "Remote Debug",
            "type": "lldb",
            "request": "launch",
            "program": "${command:cmake.launchTargetPath}", // Local path.
            "initCommands": [
                "platform select remote-linux", // Execute `platform list` for a list of available remote platform plugins.
                "platform connect connect://junk_lab_ethernet:4500",
                "settings set target.inherit-env false", // See the note below.
            ],
            "env": {
                "PATH": "~/remote_debug", // See the note below.
            },
            "args": [
                "--verbose",
                // "--addr", "113.54.155.56",
                // "--file", "live"
                "--local",
                "--file",
                "/home/goose_bomb/cv/videos/apartment.264",
                "--resize",
                "720",
                "--rotate"
            ],
            "console": "internalConsole",
            "internalConsoleOptions": "openOnSessionStart",
        }
    ]
}